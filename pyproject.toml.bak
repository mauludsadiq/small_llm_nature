[build-system]
requires = ["setuptools>=68", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "small-llm-nature"
version = "0.1.0"
description = "Transparent n-gram LLM-nature miniature: cross-entropy scaling, context utilization, and QA reranking with foil dominance."
readme = "README.md"
requires-python = ">=3.10"
dependencies = []

[project.optional-dependencies]
dev = ["pytest>=8.0", "ruff>=0.5.0"]

[tool.setuptools]
package-dir = {"" = "."}

[tool.setuptools.packages.find]
where = ["."]
include = ["llm_nature*"]

[tool.pytest.ini_options]
testpaths = ["tests"]
addopts = "-q"
